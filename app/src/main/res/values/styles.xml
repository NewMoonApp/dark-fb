<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowActionBar">false</item>//无ActionBar
        <item name="android:windowFullscreen">false</item>//全屏即无通知栏
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>//无ActionBar
        <item name="android:windowFullscreen">false</item>//全屏即无通知栏
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AdActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DrawerMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DrawerMenuTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">56dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerMenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ModeItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ModeTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ModeIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/color_control_activated</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#568FFD</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">#FAFAFA</item>
        <!-- inactive track color (30% transparency) switch关闭时的轨迹的颜色  %30这个颜色-->
        <item name="android:colorForeground">#C2CADA</item>
    </style>

    <style name="WallpaperLoadingDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>       <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@color/transparent_progress_dialog
        </item> <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item>      <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item>    <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>       <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null
        </item>  <!-- 也是个 drawable，定义 content overlay 的背景 -->
        <item name="android:backgroundDimEnabled">false</item>  <!-- 背景是否模糊显示 -->
    </style>
</resources>
